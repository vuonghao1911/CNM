<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <h1 align="center">CREATE POST</h1>
    <% if(typeof alert != 'undefined') { %>
        <% alert.forEach(function(error) { %>
            <div class="alert alert-warning alert-dismissible fade show " role="alert">
                <%= error.msg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
              </div>
        <% }) %>
    <% } %>
    <form action="/addPaper" method="POST" style="margin-left: 20px;" enctype="multipart/form-data">
        <div class="row">
            <div class="col-1">
                <label >Name Paper:</label>
            </div>
            <div class="col-1">
                <input type="text" name="namePaper"><br><br>
            </div>
        </div>
        <div class="row">
            <div class="col-1">
                <label for="lname">Author:</label>
            </div>
            <div class="col-1">
                <input type="text" id="lname" name="author"><br><br>
            </div>
        </div>
        <div class="row">
            <div class="col-1">
                <label for="lname">isbn:</label>
            </div>
            <div class="col-1">
                <input type="text" id="lname" name="isbn"><br><br>
            </div>
        </div>
        <div class="row">
            <div class="col-1">
                <label for="lname">Year:</label>
            </div>
            <div class="col-1">
                <input type="number" id="lname" name="year"><br><br>
            </div>
        </div>
        <div class="row">
            <div class="col-1">
                <label for="lname">PageNumber:</label>
                </div>
            <div class="col-1">
                <input type="number" id="lname" name="pageNumber"><br><br>
            </div>
        </div>
              
    
        <input type="submit" class="btn btn-outline-dark" style="width: 100px ; margin-left: 100px;" value="Add">
      </form>
   
</body>
</html>